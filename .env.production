# MAIFDS Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=production
DEBUG=false

# ============================================================================
# API Configuration
# ============================================================================
# If using a domain name, update this:
API_BASE_URL=http://62.171.175.58
# Or for HTTPS: https://your-domain.com

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite databases (relative to project root)
CRS_DATABASE_PATH=customer_reputation_system/data/database/reports.db

# ============================================================================
# SMS Service Configuration (Optional)
# ============================================================================
# Uncomment and fill if using Twilio
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=your_twilio_number_here

# Uncomment and fill if using Africa's Talking
# AFRICASTALKING_USERNAME=your_username_here
# AFRICASTALKING_API_KEY=your_api_key_here

# Moolre SMS (current implementation)
MOOLRE_API_KEY=your_moolre_api_key_here
MOOLRE_SENDER_ID=MAIFDS

# ============================================================================
# Redis Configuration (Optional - for caching)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ============================================================================
# Telco Webhook Configuration
# ============================================================================
TELCO_WEBHOOK_URL=https://telco-api.example.com/fraud-incidents
TELCO_WEBHOOK_API_KEY=your_telco_api_key_here

# ============================================================================
# Security Configuration
# ============================================================================
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_a_random_secret_key

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/maifds/app.log

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your domain if using one
CORS_ORIGINS=http://62.171.175.58,http://localhost:5173

# ============================================================================
# WhoisXML API Configuration (Domain Intelligence)
# ============================================================================
# Get your API key from: https://whoisxmlapi.com/
# Used for: Domain age, WHOIS data, reputation, geolocation, DNS lookup
WHOISXML_API_KEY=your_whoisxml_api_key_here

